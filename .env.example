# ============================================
# Next.js + Firebase MVP - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local or .env files to version control

# ============================================
# NextAuth Configuration
# ============================================
# Secret key for NextAuth session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# ============================================
# Firebase Client Configuration (Public)
# ============================================
# These values are exposed to the client-side bundle
# Get these from Firebase Console > Project Settings > General

# Firebase API Key (public, safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=

# Firebase Authentication Domain
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=

# Firebase Project ID
NEXT_PUBLIC_FIREBASE_PROJECT_ID=

# Firebase Storage Bucket (optional)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=

# Firebase Messaging Sender ID (optional)
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=

# Firebase App ID (optional)
NEXT_PUBLIC_FIREBASE_APP_ID=

# ============================================
# Firebase Admin Configuration (Server-only)
# ============================================
# These values are server-side only and should NEVER be exposed
# Get these from Firebase Console > Project Settings > Service Accounts

# Firebase Project ID (server-side, same as client but without NEXT_PUBLIC_ prefix)
FIREBASE_PROJECT_ID=

# Firebase Admin Service Account Email
FIREBASE_CLIENT_EMAIL=

# Firebase Admin Private Key
# Note: When copying from Firebase Console, preserve newlines or use \n
# Example format: "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY=

# ============================================
# External API Configuration
# ============================================
# OpenRouter API key for chat completions
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# ============================================
# Next.js Environment (Optional)
# ============================================
# Usually set automatically by Next.js
# Options: development, production, test
# NODE_ENV=production
